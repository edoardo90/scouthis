<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Non focused states -->
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/app_custom_tab_unselected_darkforest"     />  <!--"@color/azzurrino" /> -->
    <item android:state_focused="false" android:state_selected="true"  android:state_pressed="false" android:drawable="@drawable/app_custom_tab_selected_darkforest" /> <!--"@color/azzurrino_scuro" /> -->

    <!-- Focused states -->
    <item android:state_focused="true" android:state_selected="false" android:state_pressed="false" android:drawable="@color/coral_light"></item><!--  "@drawable/_tab_indicator_unselected_focused" /> -->
    <item android:state_focused="true" android:state_selected="true"  android:state_pressed="false" android:drawable="@color/coral_light"></item> <!-- "@drawable/_tab_indicator_selected_focused" /> -->

    <!-- Pressed -->
    <!--    Non focused states -->
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="true" android:drawable="@drawable/app_custom_tab_unselected_pressed_darkforest" />
    <item android:state_focused="false" android:state_selected="true"  android:state_pressed="true" android:drawable="@drawable/app_custom_tab_selected_pressed_darkforest" />

    <!--    Focused states -->
    <item android:state_focused="true" android:state_selected="false" android:state_pressed="true" android:drawable="@drawable/app_custom_tab_unselected_pressed_darkforest" />
    <item android:state_focused="true" android:state_selected="true"  android:state_pressed="true" android:drawable="@drawable/app_custom_tab_selected_pressed_darkforest" />
</selector>