<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Non focused states -->
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/edo_custom_tab_unselected"     />  <!--"@color/azzurrino" /> -->
    <item android:state_focused="false" android:state_selected="true"  android:state_pressed="false" android:drawable="@drawable/edo_custom_tab_selected" /> <!--"@color/azzurrino_scuro" /> -->

    <!-- Focused states -->
    <item android:state_focused="true" android:state_selected="false" android:state_pressed="false" android:drawable="@color/coral_light"></item><!--  "@drawable/custom_tab_indicator_unselected_focused" /> -->
    <item android:state_focused="true" android:state_selected="true"  android:state_pressed="false" android:drawable="@color/coral_light"></item> <!-- "@drawable/custom_tab_indicator_selected_focused" /> -->

    <!-- Pressed -->
    <!--    Non focused states -->
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="true" android:drawable="@drawable/edo_custom_tab_unselected_pressed" />
    <item android:state_focused="false" android:state_selected="true"  android:state_pressed="true" android:drawable="@drawable/edo_custom_tab_selected_pressed" />

    <!--    Focused states -->
    <item android:state_focused="true" android:state_selected="false" android:state_pressed="true" android:drawable="@drawable/edo_custom_tab_unselected_pressed" />
    <item android:state_focused="true" android:state_selected="true"  android:state_pressed="true" android:drawable="@drawable/edo_custom_tab_selected_pressed" />
</selector>