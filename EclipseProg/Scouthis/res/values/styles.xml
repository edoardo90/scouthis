<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <!--  from sveglia project START -->
        <style name="Root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/undo_bar_height</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/undo_bar_outer_margin</item>
        <item name="android:layout_marginRight">@dimen/undo_bar_outer_margin</item>
        <item name="android:layout_marginBottom">@dimen/undo_bar_outer_margin</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:maxWidth">@dimen/undo_bar_max_width</item>
        <item name="android:background">@drawable/root_background</item>
    </style>

    <style name="Message">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/undo_bar_padding</item>
        <item name="android:paddingRight">@dimen/undo_bar_padding</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/message_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/message_background</item>
    </style>

    <style name="ButtonWrapper">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/button_wrapper_background</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/divider_margin</item>
        <item name="android:layout_marginBottom">@dimen/divider_margin</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/undo_bar_padding</item>
        <item name="android:paddingRight">@dimen/undo_bar_padding</item>
        <item name="android:drawableLeft">@drawable/ic_undo</item>
        <item name="android:drawablePadding">@dimen/button_drawable_padding</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:text">@string/undo</item>
        <item name="android:background">@drawable/button_background</item>
    </style>
    
    <style name="FragmentContainer">
        <item name="android:background">@color/senape</item>
    </style>
    
    <style name="FacebookLoginButton">
	    <item name="android:textSize">@dimen/small_text</item>
	    <item name="android:background">@drawable/btn_facebook_active_400</item>
	    <item name="android:layout_marginTop">10dp</item>
	    <item name="android:layout_marginBottom">10dp</item>
	    <item name="android:layout_gravity">center_horizontal</item>
	</style>
    
    
    
    
    
    <!--  from sveglia project -->
    <!--  TAB TRY MINE EDO -->
    	
    	<style name="Widget.MyTitlepageIndicator">
		    <item name="footerColor">#ffffffff</item>
		    <item name="footerIndicatorStyle">underline</item>
		    <item name="footerIndicatorHeight">3dp</item>
		    <item name="footerLineHeight">3dp</item>
		    <item name="footerPadding">30dp</item>
		    <item name="selectedColor">#FF0000</item>
		</style>
    <!--    -->
    <!--  TAB CON ICONE-->
    <style name="StyledIndicators" parent="@style/Theme.AppCompat.Light.DarkActionBar">
       	 <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    
    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/custom_tab_indicator</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">#FF555555</item>
        <item name="android:textSize">16sp</item>
        <item name="android:divider">@drawable/custom_tab_indicator_divider</item>
        
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    
    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>
    
    
    <!--   FINE TAB CON ICONE -->

</resources>
