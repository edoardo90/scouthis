<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" 
           xmlns:app="http://schemas.android.com/apk/res/it.poli.android.scouthisme"
          >    	

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- START Start tabbed iconed browsing -->
    <style name="Tab">
        <item name="android:background">@drawable/view_tab_gradient</item>
        <item name="android:layout_height">@dimen/abc_action_bar_default_height</item>
        
    </style>

    <style name="FragmentContainer">
        <item name="android:background">@drawable/gradient_fragment_bg</item>
    </style>

    <style name="FragmentTitle">
        <item name="android:textColor">@color/fragment_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FragmentTextIndication">
        <item name="android:textColor">@color/btn_background</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FragmentTextSwitch">
        <item name="android:textColor">@color/btn_background</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="StyledIndicators" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="vpiTabPageIndicatorStyle">
            @style/CustomTabPageIndicator
        </item>
        
    </style>
    
    
    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light">
    	<item name="android:windowContentOverlay">@null</item>
    	<item name="actionBarStyle">@style/MyActionBar</item>
	</style>
    
    <style name="MyActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
    <item name="background">@color/azure</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="windowActionBarOverlay">false</item>
</style>
	
    
    

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/custom_tab_indicator</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:divider">@drawable/custom_tab_indicator_divider</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    <!-- END Start tabbed browsing -->


    <!-- START Trovamici -->
    <style name="FacebookLoginButton">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:background">@drawable/btn_facebook_login</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="FacebookLogoutButton">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:background">@drawable/btn_facebook_logout</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!-- END Trovamici -->


    <!-- START Sveglia -->
    <style name="Root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/undo_bar_height</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/undo_bar_outer_margin</item>
        <item name="android:layout_marginRight">@dimen/undo_bar_outer_margin</item>
        <item name="android:layout_marginBottom">@dimen/undo_bar_outer_margin</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:maxWidth">@dimen/undo_bar_max_width</item>
        <item name="android:background">@drawable/root_background</item>
    </style>

    <style name="Message">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/undo_bar_padding</item>
        <item name="android:paddingRight">@dimen/undo_bar_padding</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/message_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/message_background</item>
    </style>

    <style name="ButtonWrapper">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/button_wrapper_background</item>
    </style>

    <style name="FragmentAlarmSwitch">
        <item name="android:textColor">@color/saddle</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="FragmentAlarmDayOff">
        <item name="android:textColor">@color/azure</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="FragmentAlarmDayOn">
        <item name="android:textColor">@color/azure</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/undo_bar_padding</item>
        <item name="android:paddingRight">@dimen/undo_bar_padding</item>
        <item name="android:drawableLeft">@drawable/ic_undo</item>
        <item name="android:drawablePadding">@dimen/button_drawable_padding</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:text">@string/undo</item>
        <item name="android:background">@drawable/button_background</item>
    </style>
    <!-- END Sveglia -->


    <!-- START Undobar -->
    <style name="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/divider_margin</item>
        <item name="android:layout_marginBottom">@dimen/divider_margin</item>
        <item name="android:background">@color/divider</item>
    </style>
    <!-- END Undobar -->
    
    
    
  <!--   prova flessibilità maggiore per la scelta runtime dello stile -->
  
  <!--    approccio stile temi del cellulare, cioè si definiscono dei temi (es. green wood, sky ecc.) e in una seconda
  		  fase si precisano nel  dettaglio**
  		  
  		  nei fragment, ad esempio nei layout, si specifica quale dettaglio** si sta usando,
  		  l'implementazione effettiva di quel dettaglio varia in funziona del tema scelto, 
  		  tema che può essere scelto anche a runtime
  		  
  -->
	
	<!--  se nessun tema viene specificato si parte così con le opzioni "base" -->	  
  <style name="Theme" parent="android:Theme">
      	<item name="android:textColor">#aa000000</item>
      	
  </style>
	

  <!--  altrimenti nella main activity (.java) si può settare un tema -->
  
  <style name="Theme.DarkForest">
     <item name="fragmentTitleStyle">@style/dark_forest_fragment_title</item>
	 <item name="app_background">@style/dark_forest_background</item>
     <item name="circle_background">@style/dark_forest_circle_background</item> 
  </style>

  <style name="Theme.Sky">
      <item name="fragmentTitleStyle">@style/blue_sky_fragment_title</item>
      <item name="app_background">@style/blue_sky_background</item>
      <item name="circle_background">@style/blue_sky_circle_background</item>
  </style>
 
  
  <!--   dark forest theme - dettagli -->
  <style name="dark_forest_fragment_title">
      <item name="android:textSize">22sp</item>
      <item name="android:textColor">@color/green_dark</item>
      <item name="android:textStyle">normal</item>
      <item name="android:paddingBottom">5dip</item>
   </style>
	
  <style name="dark_forest_background">
      <item name="android:background">@color/blanched</item>
  </style>
  
  <style name="dark_forest_circle_background">
     <item name="cb_color">@color/green</item>
  </style>   
  
  
  
  <!--   fine dark forest -->
  
  <!--   blue sky theme - dettagli -->
  
  <style name="blue_sky_fragment_title">
      <item name="android:textSize">22sp</item>
      <item name="android:textColor">@color/blue</item>
      <item name="android:textStyle">normal</item>
      <item name="android:paddingBottom">5dip</item>
      
  </style>
  	
  <style name="blue_sky_background">
      <item name="android:background">@color/azure_light</item>
  </style> 

  <style name="blue_sky_circle_background">
     <item name="cb_color">@color/azure</item>
  </style>   
  
    
   <!--  fine blue sky theme -->
    <!--    fine prova flessibilità maggiore scelta runtime dello stile -->
    
    
    
    
    
    
    
    
    
    

</resources>