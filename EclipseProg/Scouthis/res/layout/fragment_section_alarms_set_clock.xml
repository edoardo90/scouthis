<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/set_alarm_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/fragment_margin"
    tools:context=".AlarmsSetClockFragment" >

    <TextView
        android:id="@+id/dayWillWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="@string/scegli_giorni"
		style="@style/FragmentTitle"
         />



    <LinearLayout
        android:id="@+id/weekdayll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dayWillWork"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtLun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:text="L"
            android:textColor="@color/alarm_day_colour"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/txtMar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:text="M"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/txtMer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:text="M"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/txtGiov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:text="G"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/txtVen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:text="V"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/txtSab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:text="S"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/txtDom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:text="D"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/birdschoose"
        android:layout_width="match_parent"
        
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnOkAndGoBACK"
        android:layout_below="@+id/weekdayll"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextView08"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scegli_uccello"
            android:layout_marginTop="@dimen/fragment_border_top"
            style="@style/FragmentTitle" 
            />

        <LinearLayout
            android:id="@+id/birdsll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:layout_weight="0.20"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/alarm_firstline_birds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:orientation="horizontal"
                android:scaleType="centerInside" >

                <ImageView
                    android:id="@+id/imgCardellino"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_alignBaseline="@+id/imgPasseraSc"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/bird_cardellino" />

                <ImageView
                    android:id="@+id/imgPasseraSc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/bird_passera" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/alarms_centerline_birds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/imgGufo"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/bird_gufo" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/alarm_secondline_birds"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:layout_marginTop="30dp" >

                <ImageView
                    android:id="@+id/imgPettirosso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/bird_pettirosso" />

                <ImageView
                    android:id="@+id/imgUpupa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="14dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/bird_upupa" />

                <ImageView
                    android:id="@+id/imgMerlo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/bird_merlo" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btnOkAndGoBACK"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
       
         >
        
	        <it.poli.android.scoutthisme.tools.CircleButton
	        android:id="@+id/btnAlarmSetOk"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:layout_alignParentRight="true"
	        
	        android:scaleType="fitCenter"
	        android:src="@drawable/alarm_thumb_up"
	        app:cb_color="@color/btn_background" />

	        <TextView
	            android:id="@+id/alarm_txt_back_home"
	            style="@style/FragmentTitle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:text="@string/torna_alarm_home" />
        
	    </RelativeLayout>

    

</RelativeLayout>