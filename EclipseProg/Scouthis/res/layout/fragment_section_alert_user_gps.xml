<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alert_gps_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/alert_warn_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/setGpsOn"
        android:textSize="15sp"
        android:textStyle="italic" />

    <it.poli.android.scoutthisme.tools.CircleButton
        android:id="@+id/setGpsOn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/actionb_gps"
        app:cb_color="@color/btn_background"
        app:cb_percent_down="20"
        app:cb_percent_scale="80"
        app:cb_pressed_ring_width="8dip" />

</RelativeLayout>